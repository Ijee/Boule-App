/*
//###########################################################
//## Alle CSS-Klassen sollten eindeutig zuordbar sein,     ##
//## Farben sollten als Konstanten in Root gesetzt werden, ##
//## Ordnung der Befehle sollten in allen CSS-             ##
//## Klassen gleich sein                                   ##
//###########################################################
*/

.root {
    -fx-font-size: 16;
    -fx-font-family: sans-serif;
}

.rootPane {
	
}

.menu{
	/*
	//#802C2A
	*/
	-fx-background-color: #7C101C;
	-fx-border-width: 4;
	-fx-border-color: transparent grey transparent transparent;
	-fx-border-style: solid;
	
}

.menu-eintrag {
	-fx-font-size: 12;
	-fx-font-weight: bold;
	-fx-text-fill: white;
	-fx-alignment: baseline-center;
	-fx-background-color: #7C101C;
	-fx-background-radius: 0%;
	-fx-pref-width: 100;
	-fx-pref-height: 100;
	
}

.menu-eintrag: hover{
	-fx-background-color: #872F2E;
	-fx-border-radius: 1;
	-fx-border-color: grey;
}

.menu-eintrag: selected{
	-fx-background-color: #742C2A;
	-fx-border-radius: 3;
	-fx-border-color: white;
}

.content {
	-fx-background-color: #F9F9F9;
	-fx-padding: 20;
	
}

.infoPane{
	-fx-border-width: 4;
	-fx-border-color: grey;
	-fx-border-style: solid;
	-fx-padding: 5;
}

.tableView{
	-fx-border-width: 4;
	-fx-border-color: grey;
	-fx-border-style: solid;
}



.table-view {
    
}

.table-column-alignment {
    -fx-alignment: center; 
}

.poule-eintrag {
	-fx-font-weight: bolder;
}

.poule-eintrag:hover {

}

.poule-eintrag:pressed {

}

.poulephase-label{
	
}

.poulephase-textField{
	-fx-pref-width: 50;
	-fx-max-width: 50;
	-fx-alignment: center;
}

.poulephaseKartenButton {
	
}

.suchfeld{
	-fx-pref-width: 150;
	-fx-max-width: 150;
}

.vorlagenHBox {
	 -fx-background-color: #CDCAC5;
}

.scroll-pane {
    -fx-background-color: transparent;
}